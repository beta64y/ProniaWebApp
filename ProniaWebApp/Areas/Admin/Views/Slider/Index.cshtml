@{
    ViewData["Title"] = "Slider";
}
@model List<Slider>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sliders</h4>
                    <a class="btn btn-primary" asp-action="Create">Create</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Offer</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var slides in Model)
                                {
                                <tr>
                                    <td>
                                        <img src="~/assets/images/website-images/@slides.Image"  />
                                    </td>
                                    <td>@slides.Title</td>
                                    <td>@slides.Offer %</td>
                                    <td>
                                            <a class="btn btn-success" asp-action="Detail" asp-route-id="@slides.Id">Detail</a>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@slides.Id">Update</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@slides.Id">Delete</a>

                                    </td>
                                </tr>
                                }
                                
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>